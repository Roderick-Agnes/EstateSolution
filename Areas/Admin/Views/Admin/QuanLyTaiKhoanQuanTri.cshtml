@using EstateSolution.Models
@{
    ViewBag.Title = "QuanLyTaiKhoanQuanTri";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@{
    NHANVIEN tv = (NHANVIEN)Session["NHANVIEN"];
}
<main>
    <div class="container-fluid px-4">
        <h3 class="mt-4">QUẢN LÝ TÀI KHOẢN QUẢN TRỊ</h3>
        <div class="card mb-4"  style="margin-top:1%">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                Bảng danh sách tài khoản của nhân viên
            </div>
            <div class="card-body">
                <table id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>Mã nhân viên</th>
                            <th>Họ và tên</th>
                            <th>Tài khoản</th>
                            <th>Mật khẩu</th>
                            <th>Chức vụ</th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Mã nhân viên</th>
                            <th>Họ và tên</th>
                            <th>Tài khoản</th>
                            <th>Mật khẩu</th>
                            <th>Chức vụ</th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </tfoot>
                    <tbody>

                        @foreach (var i in Model)
                        {
                            if(i.MANV != 1) { 
                                <tr>

                                    @if (@i.TAIKHOAN == null && @i.MATKHAU == null)
                                    {
                                        <td>@i.MANV</td>
                                        <td>@i.HOTEN</td>
                                        <td>Chưa cập nhật</td>
                                        <td>Chưa cập nhật</td>
                                        <td>@i.CHUCVU</td>
                                        <td><a href="@Url.Action("CreateTk", new { ma = @i.MANV })" class=" btn btn-success" role="button"><i class="fas fa-plus-circle"></i> Thêm</a></td>
                                        <td><a href="@Url.Action("DetailTk", new{ ma = @i.MANV})" class=" btn btn-primary" role="button"><i class="fas fa-eye"></i> Chi tiết</a></td>
                                        <td><a href="@Url.Action("DeleteTk", new{ ma = @i.MANV})" class=" btn btn-danger" role="button"><i class="fas fa-trash"></i> Xóa</a></td>
                                    }
                                    else
                                    {
                                        <td>@i.MANV</td>
                                        <td>@i.HOTEN</td>
                                        <td>@i.TAIKHOAN</td>
                                        <td>@i.MATKHAU</td>
                                        <td>@i.CHUCVU</td>
                                        <td><a href="@Url.Action("EditTk",new { ma = @i.MANV})" class=" btn btn-warning" role="button"><i class="fas fa-edit"></i> Sửa</a></td>
                                        <td><a href="@Url.Action("DetailTk", new{ ma = @i.MANV})" class=" btn btn-primary" role="button"><i class="fas fa-eye"></i> Chi tiết</a></td>
                                        <td><a href="@Url.Action("DeleteTk", new{ ma = @i.MANV})" class=" btn btn-danger" role="button"><i class="fas fa-trash"></i> Xóa</a></td>
                                    }


                                </tr>   
                            }
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>







