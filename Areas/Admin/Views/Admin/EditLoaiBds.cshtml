@using EstateSolution.Models;
@{
    ViewBag.Title = "EditLoaiBds";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("EditLoaiBds", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="container" style="background-color:#fff;margin-top: 1%; margin-bottom: 1%; padding-top: 2%; padding-bottom: 2%; border: 1px solid #c7c7c7; box-shadow: rgba(50, 50, 105, 0.15) 0px 2px 5px 0px, rgba(0, 0, 0, 0.05) 0px 1px 1px 0px; border-radius: 15px ">
        <h3 style="margin-left:1.5%">Chỉnh sửa loại bất động sản</h3>
        <div class="form-horizontal container-fluid" style="padding-top:1%">
            <div class="form-group container-fluid">
                Tên loại bất động sản
                <div class="col-md-10">
                    <input type="hidden" name="MALOAI" class="form-control" value="@ViewBag.MALOAI" />
                    <input type="text" name="TENLOAI" class="form-control" value="@ViewBag.TENLOAI" />
                </div>
            </div>
            <br />
            <div class="form-group container-fluid row">
                <div class="col-md-1" style="padding-left: 0;">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
                <div class="col-md-1" style="padding-left: 0; padding-right: 0">
                    <a href="/Admin/Admin/QuanLyLoaiBds"><button class="btn btn-danger">Back</button></a>
                </div>
            </div>

        </div>

    </div>
}

