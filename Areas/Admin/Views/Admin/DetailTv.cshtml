@using EstateSolution.Models;
@{
    ViewBag.Title = "DetailTv";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container" style="background-color:#fff;margin-top: 1%; margin-bottom: 1%; padding-top: 2%; padding-bottom: 2%; border: 1px solid #c7c7c7; box-shadow: rgba(50, 50, 105, 0.15) 0px 2px 5px 0px, rgba(0, 0, 0, 0.05) 0px 1px 1px 0px; border-radius: 15px ">
    <h3 style="margin-left:1.5%">Thông tin thành viên</h3>
    <div class="form-horizontal container-fluid" style="padding-top:1%">
        <div class="form-group container-fluid">
            Mã thành viên
            <div class="col-md-12">
                <input type="text" class="form-control" value="@ViewBag.MATV" />
            </div>
        </div>
        <div class="form-group container-fluid">
            Họ và tên
            <div class="col-md-12">
                <input type="text" class="form-control" value="@ViewBag.HOTEN" />
            </div>
        </div>


        <div class="form-group container-fluid">
            Giới tính
            <div class="col-md-12">
                <input type="text" class="form-control" value="@ViewBag.GIOITINH" />
            </div>
        </div>
        <div class="form-group container-fluid">
            Địa chỉ
            <div class="col-md-12">
                <input type="text" class="form-control" value="@ViewBag.DIACHI" />
            </div>
        </div>
        <div class="form-group container-fluid">
            Email
            <div class="col-md-12">
                <input type="email" class="form-control" value="@ViewBag.EMAIL" />
            </div>
        </div>
        <div class="form-group container-fluid">
            Điện thoại
            <div class="col-md-12">
                <input type="text" class="form-control" value="@ViewBag.DIENTHOAI" />
            </div>
        </div>
        <div class="form-group container-fluid">
            Ngày đăng ký thành viên
            <div class="col-md-12">
                <input type="text" class="form-control" value="@ViewBag.NGAYDKTK" />
            </div>
        </div>
        <div class="form-group container-fluid">
            Tài khoản
            <div class="col-md-12">
                <input type="text" class="form-control" value="@ViewBag.TAIKHOAN" />
            </div>
        </div>
        <div class="form-group container-fluid">
            Mật khẩu
            <div class="col-md-12">
                <input type="text" class="form-control" value="@ViewBag.MATKHAU" />
            </div>
        </div>
        <div class="form-group container-fluid">
            Facebook
            <div class="col-md-12">
                <a href="@ViewBag.LINK_FACEBOOK"><input type="url" class="form-control" value="@ViewBag.LINK_FACEBOOK" /></a>
            </div>
        </div>
        <div class="form-group container-fluid">
            Ảnh đại diện
            <div class="col-md-12">
                @if (@ViewBag.ANH_DAI_DIEN.Equals("") || @ViewBag.ANH_DAI_DIEN == null)
                {
                    <input type="text" class="form-control" placeholder="Chưa cập nhật" />
                }
                else { 
                    <img src="~/assets/Upload-Anh-Dai-Dien/@ViewBag.ANH_DAI_DIEN" style="width:70px;height:auto" />
                }
                
            </div>
        </div>


        <br />
        <div class="form-group container-fluid row">
            <div class="col-md-1" style="padding-left: 0; padding-right: 0">
                <a href="/Admin/Admin/QuanLyThanhVien"><button class="btn btn-danger">Back</button></a>
            </div>

        </div>

    </div>

</div>


