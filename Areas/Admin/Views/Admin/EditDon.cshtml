
@using EstateSolution.Models;
@{
    ViewBag.Title = "EditDon";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("EditDon", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="container" style="background-color:#fff;margin-top: 1%; margin-bottom: 1%; padding-top: 2%; padding-bottom: 2%; border: 1px solid #c7c7c7; box-shadow: rgba(50, 50, 105, 0.15) 0px 2px 5px 0px, rgba(0, 0, 0, 0.05) 0px 1px 1px 0px; border-radius: 15px ">
        <h3 style="margin-left:1.5%">Chỉnh sửa thông tin đơn đặt cọc</h3>
        <div class="form-horizontal container-fluid" style="padding-top:1%">

            <div class="form-group container-fluid">
                Mã đơn đặt cọc
                <div class="col-md-12">
                    <input type="text" name="MADON" class="form-control" value="@ViewBag.MADON" readonly />
                </div>
            </div>
            <div class="form-group container-fluid">
                Loại bất động sản
                <div class="col-md-12">
                    <input type="text" name="TENLOAI" class="form-control" value="@ViewBag.TENLOAI" readonly />
                </div>
            </div>
            <div class="form-group container-fluid">
                Tổng tiền
                <div class="col-md-12">
                    <input type="text" name="TONGTIEN" class="form-control" value="@ViewBag.TONGTIEN tỷ VND" readonly />
                </div>
            </div>
            <div class="form-group container-fluid">
                Tình trạng thanh toán
                <div class="col-md-12">
                    @if (Convert.ToInt32(ViewBag.TINHTRANG_THANHTOAN) != 0)
                    {
                        <input type="text" name="TINHTRANG_THANHTOAN" class="form-control" value="Đã thanh toán" readonly />
                    }
                    else
                    {
                        <input type="text" name="TINHTRANG_THANHTOAN" class="form-control" value="Chưa thanh toán" readonly />
                    }
                </div>
            </div>
            <div class="form-group container-fluid">
                Ngày đặt cọc
                <div class="col-md-12">
                    <input type="text" name="NGAYDAT" class="form-control" value="@Html.FormatValue(@ViewBag.NGAYDAT, "{0:dd/MM/yyyy}")" readonly />
                </div>
            </div>
            @if (Convert.ToInt32(@ViewBag.DUYET) != 0)
            {
                <div class="form-group container-fluid">
                    Tình trạng duyệt
                    <div class="col-md-12">
                        <input type="text" name="DUYET" class="form-control" value="Đã duyệt" readonly />
                    </div>
                </div>
            }
            else
            {
                <div class="form-group container-fluid">
                    Tình trạng duyệt
                    <div class="col-md-12">
                        <input type="text" name="DUYET" class="form-control" value="Đang chờ xử lý..." readonly />
                    </div>
                </div>
            }
            <div class="form-group container-fluid">
                Chọn bất động sản cần mua
                <div class="col-md-12">
                    @Html.DropDownList("MABDS", null@*ViewBag.MABDS as SelectList*@, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group container-fluid">
                Tên khách hàng
                <div class="col-md-12">
                    @Html.DropDownList("MATV", null, new { @class = "form-control" })
                </div>
            </div>


            <br />
            <div class="form-group container-fluid row">
                <div class="col-md-1" style="padding-left: 0;">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
                <div class="col-md-1" style="padding-left: 0; padding-right: 0">
                    <a href="/Admin/Admin/QuanLyDonDatCoc"><button class="btn btn-danger">Back</button></a>
                </div>

            </div>

        </div>
    </div>
}





