@model EstateSolution.Models.NHANVIEN
@{
    ViewBag.Title = "CreateNv";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container" style="background-color:#fff;margin-top: 1%; margin-bottom: 1%; padding-top: 2%; padding-bottom: 2%; border: 1px solid #c7c7c7; box-shadow: rgba(50, 50, 105, 0.15) 0px 2px 5px 0px, rgba(0, 0, 0, 0.05) 0px 1px 1px 0px; border-radius: 15px ">
    @using (Html.BeginForm("CreateNv", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <h3 style="margin-left:1.5%">Thêm mới nhân viên</h3>
        <div class="form-horizontal container-fluid" style="padding-top:1%">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group container-fluid">
                Họ và tên
                <div class="col-md-12">
                    <input type="text" name="HOTEN" class="form-control" />
                </div>
            </div>
            <div class="form-group container-fluid">
                Giới tính
                <div class="col-md-12">
                    @Html.DropDownList("GIOITINH", null, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group container-fluid">
                Địa chỉ
                <div class="col-md-12">
                    <input type="text" name="DIACHI" class="form-control" />
                </div>
            </div>
            <div class="form-group container-fluid">
                Email
                <div class="col-md-12">
                    <input type="text" name="EMAIL" class="form-control" />
                </div>
            </div>
            <div class="form-group container-fluid">
                Điện thoại
                <div class="col-md-12">
                    <input type="text" name="DIENTHOAI" class="form-control" />
                </div>
            </div>
            <div class="form-group container-fluid">
                Facebook
                <div class="col-md-12">
                    <input type="text" name="FACEBOOK" class="form-control" />
                </div>
            </div>
            <div class="form-group container-fluid">
                Chức vụ
                <div class="col-md-12">
                    @Html.DropDownList("MAPQ", ViewBag.MAPQ as SelectList, new { @class = "form-control" })
                </div>
            </div>

            <br />
            <div class="form-group container-fluid row">
                <div class="col-md-1" style="padding-left: 0;">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
                <div class="col-md-1" style="padding-left: 0; padding-right: 0">
                    <a href="/Admin/Admin/QuanLyNhanVien"><button class="btn btn-danger">Back</button></a>
                </div>

            </div>

        </div>
    }
</div>


