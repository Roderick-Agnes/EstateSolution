@using EstateSolution.Models;

@if (@ViewBag.STATE.Equals("1"))
{
    int i = 0;
    foreach (var item in Model)
    {
        i++;
        <br />
        <div class="" style="background-color:#fff;margin-top: 1%; margin-bottom: 1%; padding-top: 2%; padding-bottom: 2%; border: 1px solid #c7c7c7; box-shadow: rgba(50, 50, 105, 0.15) 0px 2px 5px 0px, rgba(0, 0, 0, 0.05) 0px 1px 1px 0px; border-radius: 15px ">
            <div class="form-group container-fluid">
                <div class="col-md-12 text-center">
                    <h3>PHẢN HỒI ĐẾN KHÁCH HÀNG LẦN @i</h3>
                </div>
                <br />
                Tiêu đề
                <div class="col-md-12">
                    <input type="text" class="form-control" value="@item.TIEUDE" />
                </div>
            </div>
            <div class="form-group container-fluid">
                Nội dung đã phản hồi với khách hàng
                <div class="col-md-12">
                    <textarea class="form-control" name="NOIDUNG" style="height:200px;">@item.NOIDUNG</textarea>
                </div>
            </div>
            <div class="form-group container-fluid">
                Ngày phản hồi đến khách hàng
                <div class="col-md-10">
                    <input type="text" class="form-control" value="@Html.FormatValue(@item.NGAYTRALOI, "{0:dd/MM/yyyy}")" />
                </div>
            </div>
        </div>

    }

}