@model EstateSolution.Models.NHANVIEN
@{
    ViewBag.Title = "CreateTk";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container" style="text-align:left;padding-top:10px;position:absolute">
    <a href="@Url.Action("QuanLyTaiKhoanQuanTri", "QuanLyTaiKhoanQuanTri")"><button id="add" class="btn btn-danger">Back</button></a>
</div>
<div class="container" style="background-color:#fff;margin-top: 1%; margin-bottom: 1%; padding-top: 2%; padding-bottom: 2%; border: 1px solid #c7c7c7; box-shadow: rgba(50, 50, 105, 0.15) 0px 2px 5px 0px, rgba(0, 0, 0, 0.05) 0px 1px 1px 0px; border-radius: 15px ">
    @using (Html.BeginForm("CreateTk", "QuanLyTaiKhoanQuanTri", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <h3 style="margin-left:1.5%">Tạo tài khoản</h3>
        <div class="form-horizontal container-fluid" style="padding-top:1%">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group container-fluid">
                Họ và tên
                <div class="col-md-12">
                    <input type="hidden" name="MANV" class="form-control" value="@ViewBag.MANV" />
                    <input type="text" id="name" name="HOTEN" class="form-control" value="@ViewBag.HOTEN" readonly />
                </div>
            </div>
            <div class="form-group container-fluid">
                Tài khoản
                <div class="col-md-12">
                    <input id="username" type="text" name="TAIKHOAN" class="form-control" value="@ViewBag.TAIKHOAN" />
                </div>
                <small id="errors" style="color:red;">@ViewBag.ErrorTAIKHOAN</small>
            </div>
            <div class="form-group container-fluid">
                Mật khẩu
                <div class="col-md-12">
                    <input id="password" type="text" name="MATKHAU" class="form-control" value="@ViewBag.MATKHAU" />
                </div>
                <small id="errors" style="color:red;">@ViewBag.ErrorMATKHAU</small>
            </div>

            <br />
            <div class="form-group container-fluid row">
                <div class="col-md-1" style="padding-left: 0;">
                    <input id="save" type="submit" value="Create" class="btn btn-primary" />
                </div>

            </div>

        </div>
    }
</div>



