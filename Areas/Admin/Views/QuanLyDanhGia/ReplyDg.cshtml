@model EstateSolution.Models.ADMIN_REPLY
@{
    ViewBag.Title = "ReplyDg";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container" style="text-align:left;padding-top:10px;position:absolute">
    <a href="@Url.Action("QuanLyDanhGia", "QuanLyDanhGia")"><button id="back" class="btn btn-danger">Back</button></a>
</div>
<div class="container" style="background-color:#fff;margin-top: 1%; margin-bottom: 1%; padding-top: 2%; padding-bottom: 2%; border: 1px solid #c7c7c7; box-shadow: rgba(50, 50, 105, 0.15) 0px 2px 5px 0px, rgba(0, 0, 0, 0.05) 0px 1px 1px 0px; border-radius: 15px ">
    @using (Html.BeginForm("ReplyDg", "QuanLyDanhGia", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <h3 style="margin-left:1.5%">Nội dung phản hồi</h3>
        <div class="form-horizontal container-fluid" style="padding-top:1%">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group container-fluid">
                Mã bình luận
                <div class="col-md-12">
                    <input id="mabl" type="text" name="MABL" class="form-control" value="@ViewBag.MABL" readonly />
                    <input type="hidden" name="MABDS" class="form-control" value="@ViewBag.MABDS" readonly />
                    <input type="hidden" name="MANV" class="form-control" value="@ViewBag.MANV" readonly />
                </div>
            </div>
            <div class="form-group container-fluid">
                Họ tên người bình luận
                <div class="col-md-12">
                    <input id="name" type="text" name="HOTEN" class="form-control" value="@ViewBag.HOTEN" readonly />
                </div>
            </div>
            <div class="form-group container-fluid">
                Tên bất động sản
                <div class="col-md-12">
                    <input id="tenbds" type="text" name="TENBDS" class="form-control" value="@ViewBag.TENBDS" readonly />
                </div>
            </div>
            <div class="form-group container-fluid">
                Nội dung
                <div class="col-md-12">
                    <textarea id="noidung" class="form-control" name="NOIDUNG" style="height:200px;" readonly>@Html.Raw(@ViewBag.NOIDUNG.ToString().Replace("\n", ""))</textarea>
                </div>
            </div>
            <div class="form-group container-fluid">
                Số sao
                <div class="col-md-12">
                    @{
                        var ii = 0; var y = 1;
                    }

                    @if (Convert.ToInt32(@ViewBag.SOSAO) == 5)
                    {
                        for (; ii < (int)Convert.ToInt32(@ViewBag.SOSAO); ii++)
                        {
                            <img src="~/Areas/Admin/src/img/icon_star.png" width="25" height="auto" style="color: #FFD700;" />
                        }
                    }
                    else if (Convert.ToInt32(@ViewBag.SOSAO) < 5)
                    {
                        for (; ii < (int)Convert.ToInt32(@ViewBag.SOSAO); ii++)
                        {
                            <img src="~/Areas/Admin/src/img/icon_star.png" width="25" height="auto" style="color: #FFD700;" />
                        }
                        for (; y <= 5 - (int)Convert.ToInt32(@ViewBag.SOSAO); y++)
                        {
                            <img src="~/Areas/Admin/src/img/icon-star-o.png" width="25" height="auto" style="color: #FFD700;" />
                        }
                    }
                </div>
            </div>
            <div class="form-group container-fluid">
                Tên nhân viên
                <div class="col-md-12">
                    <input id="tennv" type="text" name="TENNV" class="form-control" value="@ViewBag.TENNV" readonly />
                </div>
            </div>
            <div class="form-group container-fluid">
                Nội dung phản hồi
                <div class="col-md-12">
                    <textarea id="noidungph" class="form-control" name="NOIDUNGPH" style="height:200px;" placeholder="Nhập nội dung phản hồi tại đây...">@ViewBag.NOIDUNGPH</textarea>
                </div>
                <small style="color:red;">@ViewBag.ErrorNOIDUNGPH</small>
            </div>

            <br />
            <div class="form-group container-fluid row">
                <div class="col-md-1" style="padding-left: 0;">
                    <input id="save" type="submit" value="Phản hồi" class="btn btn-primary" />
                </div>
            </div>

        </div>
    }
</div>


