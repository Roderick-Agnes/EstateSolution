<link href="~/assets/scss/GioHang.css" rel="stylesheet" />
@using EstateSolution.Models;
@model List<GioHang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

@helper Truncate(String str, int len)
{
    if (str.Length > len)
    {
        @str.Substring(0, len) <text> ... </text>

    }
    else
    {
        @str
    }
}
<div class="page-head">
    <div class="container">
        <div class="row">
            <div class="page-head-content">
                <h1 class="page-title"> GIỎ HÀNG CỦA BẠN</h1>
            </div>
        </div>
    </div>
</div>
<div class="" style="background-color:#f7f8fd; max-height:100%">
    <div class="container">
        <div class="row" style="margin-top: 1%; margin-bottom: 1%;">
            <div class="col-md-8" style="background-color: #fff;width:70%; box-shadow: rgba(50, 50, 105, 0.15) 0px 2px 5px 0px, rgba(0, 0, 0, 0.05) 0px 1px 1px 0px; border-radius: 1% ">
                <h3 style="text-align:center">Thông tin giỏ hàng</h3>
                @foreach (var item in Model)
                {
                    <hr />
                    <div class="row" style="margin-left: 0.2%; margin-right: 0.2%; margin-bottom: 2.7% ">
                        <img class="col-md-2" src="~/assets/img/img-data/@item.sHINHANH" width="10%" height="auto" />
                        <div class="col-md-7">
                            <h5>@item.sTENBDS</h5>
                            <div class="col-md-6" style="padding-left:0">
                                <h5>Giá gốc: </h5><h4>@item.dGIA tỷ VND</h4>
                            </div>
                            <div class="col-md-6" style="padding-left:0">
                                <h5>Cọc trước(<span style="color:red">@item.dCOCTRUOC%</span>): </h5><h4> @Convert.ToDecimal(@item.dGIA * item.dCOCTRUOC / 100) tỷ VND</h4>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div style="text-align:right">
                                <a href="@Url.Action("XoaSPKhoiGioHang", "GioHang", new { ma = @item.iMABDS})"><button class="btn btn-danger" style="width:40px;height:auto;"><i class="fa fa-remove" style="margin-left:-3px"></i></button></a>
                            </div>


                        </div>
                        <div class="property-meta entry-meta clearfix ">

                            <div class="col-xs-3 col-sm-3 col-md-3 p-b-15">
                                <span class="property-info icon-area">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 48 48">
                                        <path class="meta-icon" fill="#FFA500" d="M46 16v-12c0-1.104-.896-2.001-2-2.001h-12c0-1.103-.896-1.999-2.002-1.999h-11.997c-1.105 0-2.001.896-2.001 1.999h-12c-1.104 0-2 .897-2 2.001v12c-1.104 0-2 .896-2 2v11.999c0 1.104.896 2 2 2v12.001c0 1.104.896 2 2 2h12c0 1.104.896 2 2.001 2h11.997c1.106 0 2.002-.896 2.002-2h12c1.104 0 2-.896 2-2v-12.001c1.104 0 2-.896 2-2v-11.999c0-1.104-.896-2-2-2zm-4.002 23.998c0 1.105-.895 2.002-2 2.002h-31.998c-1.105 0-2-.896-2-2.002v-31.999c0-1.104.895-1.999 2-1.999h31.998c1.105 0 2 .895 2 1.999v31.999zm-5.623-28.908c-.123-.051-.256-.078-.387-.078h-11.39c-.563 0-1.019.453-1.019 1.016 0 .562.456 1.017 1.019 1.017h8.935l-20.5 20.473v-8.926c0-.562-.455-1.017-1.018-1.017-.564 0-1.02.455-1.02 1.017v11.381c0 .562.455 1.016 1.02 1.016h11.39c.562 0 1.017-.454 1.017-1.016 0-.563-.455-1.019-1.017-1.019h-8.933l20.499-20.471v8.924c0 .563.452 1.018 1.018 1.018.561 0 1.016-.455 1.016-1.018v-11.379c0-.132-.025-.264-.076-.387-.107-.249-.304-.448-.554-.551z"></path>
                                    </svg>
                                </span>
                                <span class="property-info-entry">
                                    <span class="property-info-label">Diện tích</span>
                                    <span class="property-info-value">@item.sDIENTICH</span>
                                </span>
                            </div>

                            <div class="col-xs-3 col-sm-3 col-md-3 p-b-15">
                                <span class="property-info-icon icon-bed">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 48 48">
                                        <path class="meta-icon" fill="#FFA500" d="M21 48.001h-19c-1.104 0-2-.896-2-2v-31c0-1.104.896-2 2-2h19c1.106 0 2 .896 2 2v31c0 1.104-.895 2-2 2zm0-37.001h-19c-1.104 0-2-.895-2-1.999v-7.001c0-1.104.896-2 2-2h19c1.106 0 2 .896 2 2v7.001c0 1.104-.895 1.999-2 1.999zm25 37.001h-19c-1.104 0-2-.896-2-2v-31c0-1.104.896-2 2-2h19c1.104 0 2 .896 2 2v31c0 1.104-.896 2-2 2zm0-37.001h-19c-1.104 0-2-.895-2-1.999v-7.001c0-1.104.896-2 2-2h19c1.104 0 2 .896 2 2v7.001c0 1.104-.896 1.999-2 1.999z"></path>
                                    </svg>
                                </span>
                                <span class="property-info-entry">
                                    <span class="property-info-label">Phòng ngủ</span>
                                    <span class="property-info-value">@item.iSOPHONGNGU</span>
                                </span>
                            </div>

                            <div class="col-xs-3 col-sm-3 col-md-3 p-b-15">
                                <span class="property-info-icon icon-bath">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 48 48">
                                        <path class="meta-icon" fill="#FFA500" d="M37.003 48.016h-4v-3.002h-18v3.002h-4.001v-3.699c-4.66-1.65-8.002-6.083-8.002-11.305v-4.003h-3v-3h48.006v3h-3.001v4.003c0 5.223-3.343 9.655-8.002 11.305v3.699zm-30.002-24.008h-4.001v-17.005s0-7.003 8.001-7.003h1.004c.236 0 7.995.061 7.995 8.003l5.001 4h-14l5-4-.001.01.001-.009s.938-4.001-3.999-4.001h-1s-4 0-4 3v17.005000000000003h-.001z"></path>
                                    </svg>
                                </span>
                                <span class="property-info-entry">
                                    <span class="property-info-label">Phòng tắm</span>
                                    <span class="property-info-value">@item.iSOPHONGTAM</span>
                                </span>
                            </div>
                            <div class="col-xs-3 col-sm-3 col-md-3 p-b-15">
                                <span class="property-info-icon icon-area">
                                    <img src="~/assets/img/icon/cars-orange.png" width="50" height="50" />
                                </span>
                                <span class="property-info-entry">
                                    <span class="property-info-label" style="padding-top:10px">
                                        GARAGES
                                    </span>
                                    <span class="property-info-value">@item.iSOGARA</span>
                                </span>
                            </div>

                        </div>
                    </div>
                }




            </div>
            <div class="col-md-4" style="border-radius: 2%;position: relative; width: 29%; margin-left: 1%; background-color: #fff; box-shadow: rgba(50, 50, 105, 0.15) 0px 2px 5px 0px, rgba(0, 0, 0, 0.05) 0px 1px 1px 0px;">
                <div>
                    <h3 style="text-align:center;">Tổng tiền</h3>
                    <hr />
                    <h5 style="text-align:center">@ViewBag.TongTien tỷ VND</h5>
                </div>
                <div>
                    <a href="/GioHang/DatHang"><button class="button btn btn-primary" style="margin-left: -15px; width: 100%; position: absolute; margin-top: 2%; box-shadow: rgba(50, 50, 105, 0.15) 0px 2px 5px 0px, rgba(0, 0, 0, 0.05) 0px 1px 1px 0px;"> Xác nhận</button></a>
                </div>
            </div>
        </div>
    </div>

