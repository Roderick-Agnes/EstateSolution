@using EstateSolution.Models;
@{
    THANHVIEN tv = (THANHVIEN)Session["TAIKHOAN"];
    <script>
        function hideAlertFail() {
            $("#FailAlert").hide();
        }
        function showFailAlert() {
            $("#FailAlert").show();
        }
    </script>
}
<div id="FailAlert" class="container" style="position:absolute;top:0;margin-top:2%;z-index:999;display:none">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" onclick="hideAlertFail()" id="btnOk" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title text-center" id="myModalLabel" style="color:#000;"><i class="fa fa-times-circle" style="color:red;font-size:80px"></i><br>
                    <span style="margin-top:10px">Giỏ hàng của bạn đang rỗng</span><br>
                </h4>
            </div>
            @*<div class="modal-body">
                    <a>This is the messages...</a>
                </div>*@
            <div class="modal-body text-right">
                @*<button ID="btnCancel" runat="server" class="btn btn-primary">Cancel</button>*@
                <button ID="btnOk" onclick="hideAlertFail()" runat="server" class="btn btn-primary">Close</button>
            </div>
        </div>
    </div>
</div>
@if (Session["TAIKHOAN"] == null)
{
<div class="button navbar-right">
    @if (Convert.ToInt32(@ViewBag.TongSoLuong) > 0)
    {
        <a id="giohang" href="@Url.Action("GioHang", "GioHang")"><img src="~/assets/img/shopping-bag.png" style="width: 30px; height: auto; margin-left: 10px; margin-right: 30px; margin-top:-10px;" /></a>
        <p style="position:absolute;margin-left:27px; margin-top:-53px;width:23px;height:23px;background-color:red;border-radius:50%; color:white" class="text-center">@ViewBag.TongSoLuong</p>
    }
    else
    {
        <a onclick="showFailAlert()"><img src="~/assets/img/shopping-bag.png" style="width: 30px; height: auto; margin-left: 10px; margin-right: 30px; margin-top:-10px;" /></a>
        <p style="position:absolute;margin-left:27px; margin-top:-53px;width:23px;height:23px;background-color:red;border-radius:50%; color:white" class="text-center">@ViewBag.TongSoLuong</p>
    }

    <a href="/User/LoginPage?id=1&&tb=2"><button id="login" class="navbar-btn nav-button wow bounceInRight login" @*onclick=" window.open('/User/Login')"*@ data-wow-delay="0.9s">Đăng nhập</button></a>
    <a href="@Url.Action("Register", "User")"><button id="register" class="navbar-btn nav-button wow fadeInRight" @*onclick=" window.open('/User/Register')"*@ data-wow-delay="1.0s">Đăng ký</button></a>
</div>

}
else
{
<div class="button navbar-right">
    @if (Convert.ToInt32(@ViewBag.TongSoLuong) > 0)
    {
        <a id="giohang" href="@Url.Action("GioHang", "GioHang")"><img src="~/assets/img/shopping-bag.png" style="width: 30px; height: auto; margin-left: 10px; margin-right: 30px; margin-top:-10px;" /></a>
        <p style="position:absolute;margin-left:27px; margin-top:-53px;width:23px;height:23px;background-color:red;border-radius:50%; color:white" class="text-center">@ViewBag.TongSoLuong</p>
    }
    else
    {
        <a id="giohang" onclick="showFailAlert()"><img src="~/assets/img/shopping-bag.png" style="width: 30px; height: auto; margin-left: 10px; margin-right: 30px; margin-top:-10px;" /></a>
        <p style="position:absolute;margin-left:27px; margin-top:-53px;width:23px;height:23px;background-color:red;border-radius:50%; color:white" class="text-center">@ViewBag.TongSoLuong</p>
    }
    <a href=""><button id="username" class="navbar-btn nav-button wow bounceInRight login" @*onclick=" window.open('/User/Login')"*@ data-wow-delay="0.9s">@tv.TENTHANHVIEN</button></a>
    <a href="/User/Logout"><button id="logout" class="navbar-btn nav-button wow fadeInRight" @*onclick=" window.open('/User/Register')"*@ data-wow-delay="1.0s">Đăng xuất</button></a>
</div>

}


