    function myFunctionMoney() {
        var elementDate = document.getElementById("shortDate");
        var elementMoney = document.getElementById("shortMoney");
        elementMoney.classList.add("active");
        elementDate.classList.remove("active");
        $("#loadShortDatePage").hide();
        $("#loadShortMoneyPage").show();
    }


</script>



