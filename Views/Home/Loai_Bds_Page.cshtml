    function myFunctionDate() {
        var elementDate = document.getElementById("shortDate");
        var elementMoney = document.getElementById("shortMoney");
        elementMoney.classList.remove("active");
        elementDate.classList.add("active");
        $("#loadShortDatePage").show();
