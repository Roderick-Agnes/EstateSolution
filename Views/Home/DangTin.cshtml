@using EstateSolution.Models;
@{
    ViewBag.Title = "DangTin";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="page-head">
    <div class="container">
        <div class="row">
            <div class="page-head-content">
                <h1 class="page-title"> ĐĂNG TIN BÁN BẤT ĐỘNG SẢN</h1>
            </div>
        </div>
    </div>
</div>

<!-- property area -->
<div class="content-area submit-property" style="background-color: #F7f8fd;">
    &nbsp;
    <div class="container">
        <div class="clearfix">
            <div class="wizard-container">

                <div class="wizard-card ct-wizard-orange" id="wizardProperty" style="background-color: #fff; border-radius: 1%; box-shadow: rgba(50, 50, 105, 0.15) 0px 2px 5px 0px, rgba(0, 0, 0, 0.05) 0px 1px 1px 0px;">
                    <form action="/Home/DangTin" method="post" enctype="multipart/form-data">
                        <div class="wizard-header">
                            <h3>
                                VUI LÒNG NHẬP ĐẦY ĐỦ THÔNG TIN <br><br />
                                <small></small>
                            </h3>
                        </div>

                        <ul>
                            <li><a href="#step1" data-toggle="tab">Bước 1 </a></li>
                            <li><a href="#step2" data-toggle="tab">Bước 2 </a></li>
                            <li><a href="#step3" data-toggle="tab">Bước 3 </a></li>
                            @*<li><a href="#step4" data-toggle="tab">Finished </a></li>*@
                        </ul>

                        <div class="tab-content">

                            <div class="tab-pane" id="step1">
                                <div class="row p-b-15  ">
                                    <h3 class="info-text"> <i class="fa fa-edit"></i> Bắt đầu tạo hồ sơ </h3>
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label>Chọn loại bất động sản <small style="color:red">(*)</small></label>
                                            @Html.DropDownList("MALOAI", null, htmlAttributes: new { @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            <label>Tên bất động sản <small style="color:red">(*)</small></label>
                                            <input name="TENBDS" type="text" class="form-control" placeholder="Nhập tên bất động sản" required>
                                        </div>

                                        <div class="form-group">
                                            <label>Giá bán (Đơn vị: tỷ đồng) <small style="color:red">(*)</small></label>
                                            <input name="GIA" type="text" class="form-control" placeholder="ex: 10 tỷ đồng" required>
                                        </div>
                                        <div class="form-group">
                                            <label>Số phần trăm cọc trước <small style="color:red">(*)</small></label>
                                            <input name="SOPHANTRAM" type="number" class="form-control" placeholder="ex: 50" required>
                                        </div>
                                        <div class="form-group">
                                            <label>Thông tin <small style="color:red">(*)</small></label>
                                            <textarea name="THONGTIN" class="form-control" style="height:200px" placeholder="Nhập thông tin" required></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--  End step 1 -->

                            <div class="tab-pane" id="step2">
                                <h4 class="info-text"> Tạo thông tin chi tiết </h4>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <label>Diện tích <small style="color:red">(*)</small></label>
                                                <input name="DIENTICH" type="text" class="form-control" placeholder="ex: 1200m2" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <label>Địa chỉ <small style="color:red">(*)</small></label>
                                                <input name="DIACHI" type="text" class="form-control" placeholder="Nhập địa chỉ" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <label>Số phòng ngủ <small style="color:red">(*)</small></label>
                                                <input name="SOPHONGNGU" type="number" class="form-control" placeholder="ex: 3" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <label>Số phòng tắm <small style="color:red">(*)</small></label>
                                                <input name="SOPHONGTAM" type="number" class="form-control" placeholder="ex: 3" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <label>Số gara <small style="color:red">(*)</small></label>
                                                <input name="SOGARA" type="number" class="form-control" placeholder="ex: 3" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <label>Pháp lý <small style="color:red">(*)</small></label>
                                                <input name="PHAPLY" type="text" class="form-control" placeholder="Nhập loại pháp lý" required>
                                            </div>
                                        </div>
                                    </div>
                                    <br>
                                </div>
                            </div>
                            <!-- End step 2 -->
                            <div class="tab-pane" id="step3">
                                <h4 class="info-text"> Upload hình ảnh </h4>
                                <div class="row">
                                    <div class="col-sm-12">
                                        @*<div class="col-sm-4">
                                                <div class="form-group">

                                                    <div class="picture-container">
                                                        <h4>Ảnh 1</h4>
                                                        <div class="picture">
                                                            <img src="~/assets/img/default-property.jpg" class="picture-src" id="wizardPicturePreview" title="" />
                                                            <input type="file" id="wizard-picture">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>*@
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <div class="picture-container">
                                                    <h4>Ảnh 1</h4>
                                                    <div class="picture" style="background:none;border: 4px dashed #c4c4c4">
                                                        <input type="file" id="wizard-picture" name="fileUpload"></input>
                                                        <img src="~/assets/img/default-property.jpg" class="picture-src" id="wizardPicturePreview" title="" />


                                                        <input type="text" name="fileName" id="fileNameText1" hiden />
                                                        <input type="text" name="MABDSD" hidden value="@ViewBag.MABDSD" />

                                                    </div>
                                                    <progress id="fileProgress1" style="display: none"></progress>
                                                    <span id="lblMessage1" style="color: Green"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <div class="picture-container">
                                                    <h4>Ảnh 2</h4>
                                                    <div class="picture" style="background:none;border: 4px dashed #c4c4c4">
                                                        <input type="file" id="wizard-picture2" name="fileUpload2"></input>
                                                        <img src="~/assets/img/default-property.jpg" class="picture-src" id="wizardPicturePreview2" title="" />
                                                        <input type="text" name="fileName2" hidden id="fileNameText2" />

                                                    </div>
                                                    <progress id="fileProgress2" style="display: none"></progress>
                                                    <span id="lblMessage2" style="color: Green"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <div class="picture-container">
                                                    <h4>Ảnh 3</h4>
                                                    <div class="picture" style="background:none;border: 4px dashed #c4c4c4">
                                                        <input type="file" id="wizard-picture3" name="fileUpload3"></input>
                                                        <img src="~/assets/img/default-property.jpg" class="picture-src" id="wizardPicturePreview3" title="" />
                                                        <input type="text" name="fileName3" hidden id="fileNameText3" />

                                                    </div>
                                                    <progress id="fileProgress3" style="display: none"></progress>
                                                    <span id="lblMessage3" style="color: Green"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                    <br>
                                </div>
                            </div>

                            <!--  End step 3 -->



                        </div>

                        <div class="wizard-footer">
                            <div class="pull-right">
                                <input type='button' class='btn btn-next btn-primary' name='next' value='Next' />
                                <input type='submit' id="btnUpload" class='btn btn-finish btn-primary ' name='finish' value='Finish' />
                            </div>

                            <div class="pull-left">
                                <input type='button' class='btn btn-previous btn-default' name='previous' value='Previous' />
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </form>

                </div>
                <!-- End submit form -->
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        // bsCustomFileInput.init();
        $("#wizard-picture2").change(function () {
            readURL2($("#wizard-picture2"));
        });
        $("#wizard-picture3").change(function () {
            readURL3(this);
        });
    });
    function readURL2(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#wizardPicturePreview2').attr('src', e.target.result).fadeIn('slow');
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
    function readURL3(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#wizardPicturePreview3').attr('src', e.target.result).fadeIn('slow');
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
